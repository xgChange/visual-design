{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "rootDir": ".",
    "composite": true,
    "types": ["vite/client"],
    "paths": {
      "@visual/*": ["packages/*/src"]
    }
  },
  "extends": "./tsconfig.common.json",
  "exclude": ["node_modules"],
  "include": [
    "example/src/**/.ts",
    "example/src/**/.tsx",
    "example/src/**/.vue",
    "example/src/**/.d.ts",
    "packages/*/src"
  ]
}
